{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0",
  "description": "An extension that uses html2canvas",
  "commands": {
    "capture-screen": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Capture the visible part of the current tab"
    }
  },
  "action": {
    "default_popup": "./popup.html"
  },
  "background": {
    "service_worker": "./background.js",
    "type": "module"
  },

  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content.bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "./options.html",
  "web_accessible_resources": [
    {
      "resources": ["./styles"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["./data"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "./assets/kanaSearch16.png",
    "48": "./assets/kanaSearch48.png",
    "128": "./assets/kanaSearch128.png",
    "512": "./assets/kanaSearch512.png"
  }
}
